<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
  <!-- % User.all.each do |user| %-->
    <li>
      <%= gravatar_thumb_for user %>
      <% if current_user.admin? && user.admin? %>
        <%= link_to user.name, user %> <strong>Administrator</strong>
      <%else%>
        <%= link_to user.name, user %>
      <%end%>
    </li>
  <% end %>
</ul>


<%= will_paginate %>