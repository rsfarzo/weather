<header>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <!-- Toggler/collapsibe Button -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    <span class="navbar-toggler-icon"></span>
  </button>
  <!-- Navbar links -->
  <div class="collapse navbar-collapse" id="collapsibleNavbar">
    <ul class="navbar-nav">
      <li class="nav-item"><%= link_to "Home", root_path, id: "logo" %>
      <li class="nav-item"><%= link_to "About", about_path %></li>
      <% if logged_in? %>
        <li class="nav-item"><%= link_to "Weather", weather_path %></li>
        <li class="nav-item"><%= link_to "Users", users_path %></li> 
        <li class="header_text"><%= @current_user.name %></li>
        <li class="nav-item"><%= link_to "Profile", current_user %></li>
        <li class="nav-item"><%= link_to "Settings", edit_user_path(current_user) %></li>
        <li class="nav-item">
          <%= link_to "Log out", logout_path,
                                  data: { "turbo-method": :delete } %>
        </li>
      <% else %>
        <li><%= link_to "Log in", login_path %></li>
      <% end %>
    </ul>
  </div>
</nav>
</header>